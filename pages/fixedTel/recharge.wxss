.back {
    color: #55befd
}

.back,.toast {
    padding: 10rpx 30rpx
}

.toast {
    color: rgba(0,0,0,.5)
}

.longbutton {
    background-color: #3c9dfb;
    border-radius: 50rpx;
    color: #fff;
    margin-top: 50rpx;
    width: 600rpx
}

.recharge {
    background-color: #fff;
    box-sizing: border-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: flex-start;
    justify-content: flex-start;
    margin-top: 30rpx;
    padding: 30rpx 20rpx;
    width: 100%
}

.recharge-title {
    color: rgba(0,0,0,.5);
    font-size: 28rpx
}

.recharge-radio-group {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
    justify-content: space-around;
    margin-top: 30rpx
}

.recharge-radio {
    -webkit-align-items: center;
    align-items: center;
    border: 1px solid #e3e3e3;
    border-radius: 10rpx;
    display: -webkit-flex;
    display: flex;
    height: 100rpx;
    -webkit-justify-content: center;
    justify-content: center;
    width: 100rpx
}

.recharge-radio-actived {
    border: 1px solid #3c9dfb;
    color: #3c9dfb
}
