.area {
    padding: 30rpx
}

.area-item {
    background-image: linear-gradient(270deg,#4387e4,#1b46ae);
    border-radius: 20rpx;
    color: #fff;
    -webkit-flex-direction: column;
    flex-direction: column;
    margin-bottom: 30rpx;
    padding: 30rpx
}

.area-item,.area-item-title {
    display: -webkit-flex;
    display: flex
}

.area-item-title {
    -webkit-align-items: center;
    align-items: center;
    font-size: 36rpx
}

.area-item-title wx-image {
    margin-right: 30rpx;
    width: 44rpx
}

.area-item-con {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    margin-top: 30rpx
}

wx-button {
    border-radius: 50rpx;
    font-size: 28rpx;
    margin: 0;
    padding: 0 50rpx;
    width: auto
}

.noshower {
    color: #c3c3c3;
    font-size: 40rpx;
    margin-top: 100rpx;
    text-align: center
}
