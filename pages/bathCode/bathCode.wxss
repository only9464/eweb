.bathCode {
    padding: 30rpx 10rpx
}

.bathCode-con {
    color: #fff;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: center;
    justify-content: center
}

.bathCode-con-item {
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    padding: 50rpx
}

.bathCode-con-item-header {
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.bathCode-con-item-header,.bathCode-con-item-header-icon {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex
}

.bathCode-con-item-header-icon {
    border-radius: 50%;
    height: 70rpx;
    -webkit-justify-content: center;
    justify-content: center;
    margin-right: 20rpx;
    width: 70rpx
}

.bathCode-con-item-header-pcname {
    font-size: 36rpx
}

.bathCode-con-item-header-username {
    font-size: 26rpx;
    letter-spacing: 5rpx;
    opacity: .7
}

.bathCode-con-item-con {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: flex-end;
    justify-content: flex-end;
    margin-top: 50rpx
}

.bathCode-con-item-con-code {
    margin-bottom: 30rpx
}

.bathCode-con-item-con-code-des {
    color: #284fa5;
    font-size: 32rpx;
    font-weight: 700;
    margin-right: 20rpx;
    white-space: nowrap
}

.bathCode-con-item-con-code-code {
    font-size: 40rpx;
    font-weight: 700;
    letter-spacing: 20rpx
}

.query,.unbind {
    border-radius: 20rpx;
    color: #fff;
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0;
    width: 200rpx
}

.query {
    margin-right: 30rpx;
    width: 230rpx
}

.bathCode-add {
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 5rpx 0rpx 10rpx #c3c3c3;
    padding: 30rpx
}

.bathCode-add,.bathCode-add-btn {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex
}

.bathCode-add-btn {
    background-color: #eef7ff;
    border-radius: 50%;
    color: #78bcfc;
    font-size: 40rpx;
    height: 100rpx;
    -webkit-justify-content: center;
    justify-content: center;
    width: 100rpx
}

.bathCode-add-des {
    display: -webkit-flex;
    display: flex;
    -webkit-flex: 3;
    flex: 3;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    margin-left: 20rpx
}

.bathCode-add-des-title {
    font-size: 32rpx
}

.bathCode-add-des-des {
    color: #c3c3c3;
    font-size: 26rpx
}

.hidden {
    display: none
}

wx-image {
    height: auto
}

.notice {
    border-top: 2px solid #284fa5;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    padding: 30rpx
}

.notice > wx-text {
    line-height: 70rpx;
    text-indent: 60rpx
}

.notice > wx-text:nth-child(1) {
    text-indent: 0
}

.img {
    text-align: center;
    width: 100%
}

.img > wx-image {
    width: 400rpx
}
