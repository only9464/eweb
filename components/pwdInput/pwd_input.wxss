    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
    justify-content: space-around;
    margin-top: 100rpx;
    position: relative;
    width: 500rpx
}

.bug {
    background-color: #606060;
    border-radius: 50%;
    height: 10rpx;
    position: absolute;
    top: 36rpx;
    width: 10rpx
}

