.modal_background {
    background-color: #000;
    bottom: 0;
    left: 0;
    opacity: .4;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 992
}

.modal_modal {
    -webkit-align-items: center;
    align-items: center;
    background-color: #fff;
    border-radius: 20rpx;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    left: 50%;
    padding: 0 30rpx;
    position: absolute;
    top: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    width: 550rpx;
    z-index: 999
}

.modal_modal > wx-image {
    margin: 30rpx 0;
    width: 100rpx
}

.modal_modal_title {
    -webkit-align-items: center;
    align-items: center;
    color: #000;
    display: -webkit-flex;
    display: flex;
    font-size: 30rpx;
    -webkit-justify-content: center;
    justify-content: center;
    padding: 10rpx
}

.modal_modal_content {
    color: #a3a3a3;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    font-size: 28rpx;
    max-height: 500rpx;
    overflow: auto;
    padding: 0 30rpx;
    text-align: justify
}

.modal_modal_content wx-view {
    line-height: 60rpx
}

.btn {
    -webkit-align-items: center;
    align-items: center;
    color: #063190;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    font-size: 28rpx;
    gap: 10rpx 0;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    padding: 40rpx 0 30rpx;
    width: 100%
}

.btn wx-text {
    display: block;
    padding: 10rpx 0;
    text-align: center;
    width: 75%
}

.btn wx-text:first-child {
    background-color: #1890ff;
    border-radius: 10rpx;
    color: #fff
}

.btn wx-text:last-child {
    color: gray
}

.modal_modal_user {
    color: #063190;
    font-size: 28rpx;
    margin: 30rpx 0 0;
    padding-right: 60rpx;
    text-align: right
}
