.modal_background {
    background-color: #000;
    bottom: 0;
    left: 0;
    opacity: .4;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 992
}

.modal_modal {
    background-color: #fff;
    border-radius: 20rpx;
    left: 50%;
    padding: 0 30rpx;
    position: absolute;
    top: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    width: 500rpx;
    z-index: 999
}

.modal_modal_title {
    -webkit-align-items: center;
    align-items: center;
    color: #000;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: center;
    justify-content: center;
    padding: 30rpx
}

.modal_modal_content {
    color: #a3a3a3;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    max-height: 600rpx;
    overflow: auto;
    padding: 0 30rpx;
    text-align: justify
}

.modal_modal_content wx-text {
    line-height: 60rpx
}

.btn {
    -webkit-align-items: center;
    align-items: center;
    color: #063190;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    padding: 30rpx 0
}

.btn wx-text {
    display: block;
    text-align: center;
    width: 50%
}

.call {
    color: #3599fb;
    display: inline-block;
    margin-left: 10rpx;
    margin-right: 10rpx;
    text-decoration: underline
}

.laybox {
    margin-top: 30rpx
}
